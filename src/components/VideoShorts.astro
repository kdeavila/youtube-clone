---
import YoutubeShorts from "@icons/YoutubeShorts.astro";
import ShortContainer from "./ShortContainer.astro";
import { SHORTS } from "@data/ShortData";
---

<section class="p-3">
    <div class="flex items-center gap-3 mb-3">
        <div class="size-6">
            <YoutubeShorts />
        </div>
        <span class="text-lg font-bold">Shorts</span>
    </div>

    <div class="grid grid-cols-2 xs:grid-cols-4 md:grid-cols-5 xl:grid-cols-6 md:gap-4 gap-2">
        {
            SHORTS.map((short) => {
                return (
                    <ShortContainer
                        title={short.title}
                        thumbnailSrc={short.thumbnailSrc}
                    />
                );
            })
        }
    </div>
</section>
